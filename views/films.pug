// Carousel //
.carousel-backing(style = 'width: 1500px; height: 700px; margin: 0 auto; position:relative; top:80px;')
  #carouselExampleControls.carousel.slide(data-ride='carousel' style ='width: 550px; height: 550px; margin: 0 auto;')
      .carousel-inner
        - let values = listedFilms.content
            each val, index in values ? values : ['There are no values']
              if(index === 0)
                .carousel-item.active
                  h2= JSON.stringify(val.title)
                  h3='Created by ' + JSON.stringify(val.creator) + '('+ JSON.stringify(val.year) +')'
                  img.d-block.w-100(src=val.url, alt="Image Title")
                  .video-backing
                    .embed-responsive.embed-responsive-16by9(style = 'width: 500px; height: 250px; margin: 0 auto; position:relative; top: 25px;')
                      iframe.embed-responsive-item(src=val.videoUrl, alt= 'https://www.youtube.com/embed/zpOULjyy-n8?rel=0',allowfullscreen='')
                 
              else     
                .carousel-item
                  h2= JSON.stringify(val.title)
                  h3='Created by ' + JSON.stringify(val.creator) + '('+ JSON.stringify(val.year) +')'
                  img.d-block.w-100(src=val.url, alt="Image Title")
                  .video-backing
                    .embed-responsive.embed-responsive-16by9(style = 'width: 500px; height: 250px; margin: 0 auto; position:relative; top: 25px;')
                      iframe.embed-responsive-item(src= val.videoUrl, alt= 'https://www.youtube.com/embed/zpOULjyy-n8?rel=0',allowfullscreen='')



                  


        a.carousel-control-prev(href='#carouselExampleControls' role='button' data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Previous
        a.carousel-control-next(href='#carouselExampleControls' role='button' data-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.sr-only Next


