h1 Delete Game

// Carousel //
.carousel-backing(style = 'width: 1500px; height: 700px; margin: 0 auto; position:relative; top:80px;')
  #carouselExampleControls.carousel.slide(data-ride='carousel' style ='width: 550px; height: 550px; margin: 0 auto')
      .carousel-inner
        - let values = listedItems.content
            each val, index in values ? values : ['There are no values']
              if(index === 0)
                .carousel-item.active
                  h2(id = 'h2')= JSON.stringify(val.title)
                  h3= 'Game ID: ' + JSON.stringify(val.id)
                  img.d-block.w-100(src=val.url, alt="Image Title")
              else     
                .carousel-item
                  h2= JSON.stringify(val.title)
                  h3= 'Game ID: ' + JSON.stringify(val.id)
                  img.d-block.w-100(src=val.url, alt="Image Title")

      a.carousel-control-prev(href='#carouselExampleControls' role='button' data-slide='prev')
          span.carousel-control-prev-icon(aria-hidden='true')
          span.sr-only Previous
      a.carousel-control-next(href='#carouselExampleControls' role='button' data-slide='next')
          span.carousel-control-next-icon(aria-hidden='true')
          span.sr-only Next


.form-container(style ='width: 550px; height: 200px; margin: 0 auto; position:relative; top: 150px;')      
  form(id = "form-game", method = "post" style = 'width: 300px;margin: 0 auto; position:relative; top: 20px;')
    p Enter the ID of the game you want to delete from the database
    input.form-control(id = 'id' type='json', placeholder='Game ID' name='item[id]')
    button.btn.btn-primary.btn-lg.btn-block(id='delete' type='submit') Delete   