// My CSS //
link(rel='stylesheet' href='/style2.css')

// NavBar //
include navbar

h1 Update your Book


// Carousel //
.carousel-backing(style = 'width: 1500px; height: 700px; margin: 0 auto; position:relative; top:80px;')
  .slide(data-ride='carousel' style ='width: 550px; height: 550px; margin: 0 auto')
      .inner
        - let value = book
                .item
                  h2= JSON.stringify(value.data.title)
                  h3='Created by ' + JSON.stringify(value.data.creator) + '('+ JSON.stringify(value.data.year) +')'
                  img.d-block.w-100(src=value.data.url, alt="Image Title")

.form-container(style ='width: 550px; height: 400px; margin: 0 auto; position:relative; top: 150px;')      
  form(id = "form-book", method = "post" style = 'width: 300px;margin: 0 auto; position:relative; top: 20px;')
    p Update the details of the book in the database
    input.form-control(id = 'id' type='json', placeholder='book ID' name='book[id]' value=value.data.id)
    input.form-control(id = 'title' type='json', placeholder='book Title' name='book[title]' value=value.data.title)
    input.form-control(id = 'year' type='json', placeholder='Release Year' name='book[year]' value=value.data.year)
    input.form-control(id = 'creator' type='json', placeholder='Creators' name='book[creator]' value=value.data.creator)
    input.form-control(id = 'url' type='json', placeholder='Image URL' name='book[url]' value=value.data.url) 
    input.form-control(id = 'url' type='json', placeholder='Video URL' name='book[videoUrl]' value=value.data.videoUrl)
    button.btn.btn-primary.btn-lg.btn-block(type='submit') Update          